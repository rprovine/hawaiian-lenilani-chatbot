# Hawaiian LeniLani Chatbot Production Environment Configuration

# Application Settings
APP_NAME=hawaiian-lenilani-chatbot
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=info

# Domain Configuration
DOMAIN=hawaii.lenilani.com
ALLOWED_ORIGINS=https://hawaii.lenilani.com,https://lenilani.com

# Database Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=hawaiian_lenilani
POSTGRES_USER=lenilani
POSTGRES_PASSWORD=your-secure-postgres-password-here
DATABASE_URL=postgresql://lenilani:your-secure-postgres-password-here@postgres:5432/hawaiian_lenilani

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your-secure-redis-password-here
REDIS_URL=redis://:your-secure-redis-password-here@redis:6379/0

# Claude API Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key-here
CLAUDE_MODEL=claude-3-opus-20240229
CLAUDE_MAX_TOKENS=1024
CLAUDE_TEMPERATURE=0.7

# Rasa Configuration
RASA_HOST=rasa
RASA_PORT=5005
RASA_TOKEN=your-rasa-token-here
RASA_MODEL_NAME=hawaiian_business_model

# HubSpot Configuration
HUBSPOT_API_KEY=your-hubspot-api-key-here
HUBSPOT_PORTAL_ID=your-portal-id
HUBSPOT_PIPELINE_ID=default
HUBSPOT_OWNER_ID=your-owner-id

# Google Calendar Configuration
GOOGLE_CALENDAR_CLIENT_ID=your-google-client-id
GOOGLE_CALENDAR_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALENDAR_REFRESH_TOKEN=your-refresh-token
GOOGLE_CALENDAR_ID=primary
GOOGLE_MEET_ENABLED=true

# Timezone Configuration
TZ=Pacific/Honolulu
DEFAULT_TIMEZONE=Pacific/Honolulu

# Security Configuration
SECRET_KEY=your-very-secure-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# CORS Configuration
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=3600

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Session Configuration
SESSION_LIFETIME_MINUTES=120
SESSION_CLEANUP_INTERVAL_MINUTES=30

# Analytics Configuration
ANALYTICS_ENABLED=true
ANALYTICS_RETENTION_DAYS=90

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=7
S3_BACKUP_BUCKET=lenilani-backups
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_DEFAULT_REGION=us-west-1

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=notifications@lenilani.com
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=Hawaiian LeniLani Bot <aloha@lenilani.com>

# Webhook Configuration
BACKUP_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url
ERROR_WEBHOOK_URL=https://hooks.slack.com/services/your/error/webhook

# Feature Flags
ENABLE_PIDGIN_MODE=true
ENABLE_MULTI_LANGUAGE=true
ENABLE_ISLAND_SPECIFIC_CONTENT=true
ENABLE_CULTURAL_INSIGHTS=true
ENABLE_APPOINTMENT_BOOKING=true

# Performance Tuning
MAX_WORKERS=4
WORKER_TIMEOUT=300
KEEP_ALIVE_TIMEOUT=75
GRACEFUL_SHUTDOWN_TIMEOUT=30

# Frontend Configuration
REACT_APP_API_URL=https://hawaii.lenilani.com/api
REACT_APP_WEBSOCKET_URL=wss://hawaii.lenilani.com/ws
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_GA_TRACKING_ID=UA-XXXXXXXXX-X